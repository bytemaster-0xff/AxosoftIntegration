<Window x:Class="Axosoft.WPF.MainWindow"
        xmlns:axo="clr-namespace:Axosoft.Core.ViewModel;assembly=Axosoft.Core"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <axo:MainViewModel x:Key="VM" />
    </Window.Resources>
    <Grid DataContext="{StaticResource VM}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button BorderBrush="Transparent" Command="{Binding RefreshCommand}" Background="Transparent" Margin="4" Width="72" Height="72">
            <Image Source="/Images/Refresh.png" />
        </Button>
        <ListBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding WorkItemsList}">
            
        </ListBox>
    </Grid>
</Window>
